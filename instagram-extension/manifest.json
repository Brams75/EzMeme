{
  "manifest_version": 3,
  "name": "EzMeme Instagram Downloader",
  "version": "1.0",
  "description": "Télécharge facilement les vidéos, l'audio et extrait le texte des posts Instagram",
  "permissions": [
    "storage",
    "downloads",
    "scripting",
    "tabs",
    "clipboardWrite",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://instagram.com/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*", "https://instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "direct-downloader.js"],
      "matches": ["https://*.instagram.com/*", "http://localhost:3000/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
